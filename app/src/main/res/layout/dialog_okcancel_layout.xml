<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/shape_background_white2">
	
	<TextView
		android:gravity="center"
		android:id="@+id/textView"
		android:layout_width="240dp"
		android:layout_height="120dp"
		android:text="@string/request_restart"
		android:textColor="@color/text_black"
		android:textSize="18sp"
		app:layout_constraintBottom_toTopOf="@+id/button_cancel_dialog"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<Button
		android:id="@+id/button_cancel_dialog"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:background="@drawable/shape_background_gray"
		android:text="取消"
		android:textColor="@color/text_gray6"
		android:textSize="@dimen/tag_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/button_ok_dialog"
		app:layout_constraintStart_toStartOf="parent" />
	
	<Button
		android:id="@+id/button_ok_dialog"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:background="@null"
		android:text="确认"
		android:textColor="@color/text_gray6"
		android:textSize="@dimen/tag_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/button_cancel_dialog" />

</android.support.constraint.ConstraintLayout>
